<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.action.extension" value="do,action"/>
    <constant name="struts.objectFactory" value="spring"/>
    <package name="wcms" extends="struts-default" namespace="/">
        <!--客户资料增删改查-->
        <action name="customer_getall" class="customerCrudAction" method="getall"></action>
        <action name="customer_add" class="customerCrudAction" method="add"></action>
        <action name="customer_remove" class="customerCrudAction" method="remove"></action>
        <action name="customer_update" class="customerCrudAction" method="update"></action>
        <!--客户资料增删改查-->

        <!--窗帘资料增删改查-->
        <action name="curtain_getall" class="curtainCrudAction" method="getall"></action>
        <action name="curtain_add" class="curtainCrudAction" method="add"></action>
        <action name="curtain_remove" class="curtainCrudAction" method="remove"></action>
        <action name="curtain_update" class="curtainCrudAction" method="update"></action>
        <!--窗帘资料增删改查-->

        <!--供应商资料增删改查-->
        <action name="supplier_getall" class="supplierCrudAction" method="getall"></action>
        <action name="supplier_add" class="supplierCrudAction" method="add"></action>
        <action name="supplier_remove" class="supplierCrudAction" method="remove"></action>
        <action name="supplier_update" class="supplierCrudAction" method="update"></action>
        <!--供应商资料增删改查-->

        <!--仓库资料增删改查-->
        <action name="warehouse_getall" class="warehouseCrudAction" method="getall"></action>
        <action name="warehouse_add" class="warehouseCrudAction" method="add"></action>
        <action name="warehouse_remove" class="warehouseCrudAction" method="remove"></action>
        <action name="warehouse_update" class="warehouseCrudAction" method="update"></action>
        <!--仓库资料增删改查-->

        <!--材料资料增删改查-->
        <action name="material_getall" class="materialCrudAction" method="getall"></action>
        <action name="material_add" class="materialCrudAction" method="add"></action>
        <action name="material_remove" class="materialCrudAction" method="remove"></action>
        <action name="material_update" class="materialCrudAction" method="update"></action>
        <!--材料资料增删改查-->

        <!--采购明细增删改查-->
        <action name="procurement_getall" class="procurementCrudAction" method="getall"></action>
        <action name="procurement_add" class="procurementCrudAction" method="add"></action>
        <action name="procurement_remove" class="procurementCrudAction" method="remove"></action>
        <action name="procurement_update" class="procurementCrudAction" method="update"></action>
        <!--材料资料增删改查-->
        <!---->
        <!--材料资料增删改查-->
        <action name="procurement_detail_getall" class="procurementDetailCrudAction" method="findByProcurementId"></action>
        <action name="procurement_detail_add" class="procurementDetailCrudAction" method="add"></action>
        <action name="procurement_detail_remove" class="procurementDetailCrudAction" method="remove"></action>
        <action name="procurement_detail_update" class="procurementDetailCrudAction" method="update"></action>
        <!--材料资料增删改查-->
    </package>
</struts>